@model IEnumerable<Library.Data.Users.UsersDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Users</h1>

<p>
    <a asp-action="Create">Register user</a>
</p>

@using (Html.BeginForm())
{
    @Html.TextBox("SearchValue")
    <input type="submit" value="Search" />
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Name", "Index", new {sortOrder = "Name", direction = 0 - @ViewBag.Name, searchValue = @ViewBag.Search})
                <!--@Html.DisplayNameFor(model => model.Name)-->
            </th>
            <th>
                @Html.ActionLink("Surname", "Index", new {sortOrder = "Surname", direction = 0 - @ViewBag.Surname, searchValue = @ViewBag.Search})
                <!--@Html.DisplayNameFor(model => model.Surname)-->
            </th>
            <th>
                @Html.ActionLink("Email", "Index", new {sortOrder = "Email", direction = 0 - @ViewBag.Email, searchValue = @ViewBag.Search})
                <!--@Html.DisplayNameFor(model => model.Email)-->
            </th>
            <th>
                @Html.ActionLink("Department", "Index", new {sortOrder = "Department", direction = 0 - @ViewBag.Department, searchValue = @ViewBag.Search})
                <!--@Html.DisplayNameFor(model => model.Department)-->
            </th>
            <th>
                @Html.ActionLink("CreatedOn", "Index", new {sortOrder = "CreatedOn", direction = 0 - @ViewBag.CreatedOn, searchValue = @ViewBag.Search})
                <!--@Html.DisplayNameFor(model => model.CreatedOn)-->
            </th>
            <th>
                @Html.ActionLink("SockColour", "Index", new {sortOrder = "SockColour", direction = 0 - @ViewBag.SockColour, searchValue = @ViewBag.Search})
                <!--@Html.DisplayNameFor(model => model.SockColour)-->
            </th>
            <!--
            <th>Controls</th>
            -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SockColour)
                </td>
                <!--
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
                -->
            </tr>
        }
    </tbody>
</table>
